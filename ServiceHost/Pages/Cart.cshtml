@page
@model ServiceHost.Pages.CartModel
@{
   ViewData["Title"] = "سبد خرید";
}

<div class="breadcrumb-area section-space--half">
   <div class="container wide">
      <div class="row">
         <div class="col-lg-12">
            <div class="breadcrumb-wrapper breadcrumb-bg">
               <div class="breadcrumb-content">
                  <h2 class="breadcrumb-content__title">سبد خرید شما</h2>
                  <ul class="breadcrumb-content__page-map">
                     <li>
                        <a href="index.html">صفحه اصلی</a>
                     </li>
                     <li class="active">سبد خرید</li>
                  </ul>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>

<div class="page-content-area">
   <div class="container">
      <div class="row">
         <div class="col-lg-12">
            <!--=======  page wrapper  =======-->
            <div class="page-wrapper">
               <div class="page-content-wrapper">
                  <form asp-page="/Checkout">
                     <div class="cart-table table-responsive">
                        <table class="table">
                           <thead>
                              <tr>
                                 <th class="pro-thumbnail">عکس</th>
                                 <th class="pro-title">نام</th>
                                 <th class="pro-price">قیمت واحد</th>
                                 <th class="pro-quantity">تعداد</th>
                                 <th class="pro-subtotal">قیمت کل</th>
                                 <th class="pro-remove">حذف</th>
                              </tr>
                           </thead>
                           <tbody>
                              @foreach (var product in Model.CartItems)
                              {
                                 <tr>
                                    <td class="pro-thumbnail">
                                       <a href="single-product.html">
                                          <img src="~/ProductPictures/@product.Picture" width="100px" class="img-fluid" alt="@product.Name">
                                       </a>
                                    </td>
                                    <td class="pro-title">
                                       <a href="single-product.html">@product.Name</a>
                                    </td>
                                    <td class="pro-price">
                                       <span>@product.Price</span>
                                    </td>
                                    <td class="pro-quantity">
                                       <div class="quantity-selection">
                                          <input type="number" value="@product.Count" min="1">
                                       </div>
                                    </td>
                                    <td class="pro-subtotal">
                                       <span>@product.TotalPrice</span>
                                    </td>
                                    <td class="pro-remove">
                                       <a class="p-2 bg-danger text-white rounded-md" asp-page="/Cart" asp-page-handler="Remove" asp-route-id="@product.Id">
                                          X
                                       </a>
                                    </td>
                                 </tr>
                              }
                           </tbody>
                        </table>
                        <div class="cart-summary-button">
                           <button type="submit" class="checkout-btn border-0 p-3 btn-success m-3">تکمیل خرید</button>
                        </div>
                     </div>
                  </form>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
