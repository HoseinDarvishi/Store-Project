@model List<StoreQuery.ProductCategory.ProductCategoryQM>



<div class="category-area section-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  category wrapper  =======-->
                <div class="category-wrapper">
                    <div class="row masonry-category-layout">


                        @foreach (var cat in Model)
                        {
                            <div class="col-lg-4 col-sm-6 grid-item">
                                <div class="single-category-item">
                                    <div class="single-category-item__image">
                                        <a asp-page="/ProductCategory" asp-route-id="@cat.Slug">
                                            <img src="@cat.Picture" class="img-fluid" alt="@cat.PictureAlt" title="@cat.PictureTitle">
                                        </a>
                                    </div>
                                    <div class="single-category-item__content">
                                        <h3 class="title">@cat.Name</h3>
                                        <a asp-page="/ProductCategory" asp-route-id="@cat.Slug">
                                            <i class="ion-android-arrow-dropleft-circle"></i> دیدن
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
