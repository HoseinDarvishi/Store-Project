@model List<ShopManagement.Application.Constract.Order.OrderItemViewModel>

<div class="modal-header">
   <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
   <h4 class="modal-title">لیست کالاهای سفارش @Model.First().OrderId</h4>
</div>


<div class="modal-body">
   <div class="row">
      <table class="table table-bordered table-hover table-striped">
         <thead>
            <tr>
               <th>#</th>
               <th>نام محصول</th>
               <th>تعداد</th>
               <th>قیمت واحد</th>
               <th>درصد تخفیف</th>
               <th>قیمت کل</th>
               <th>تخفیف کل</th>
               <th>مبلغ پرداختی</th>
            </tr>
         </thead>
         <tbody>
            @foreach (var oper in Model)
            {
               <tr>
                  <td>@oper.ProductId</td>
                  <td>@oper.ProductName</td>
                  <td>@oper.Count</td>
                  <td>@oper.UnitPrice.ToString("#,#")</td>
                  <td>@oper.DiscountRate %</td>
                  <td>@oper.TotalPrice.ToString("#,#")</td>
                  <td>@oper.TotalDiscount.ToString("#,#")</td>
                  <td>@oper.TotalPayment.ToString("#,#")</td>
               </tr>
            }
         </tbody>
      </table>
   </div>
</div>

