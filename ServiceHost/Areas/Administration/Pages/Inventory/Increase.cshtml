@model InventoryManagement.Application.Constracts.Inventory.IncreaseInventory
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">افزایش موجودی محصول</h4>
</div>

<form asp-page="./Index" asp-page-handler="Increase"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="@Model.Count">تعداد</label>
                    <input type="number" class="form-control" asp-for="@Model.Count">
                    <span asp-validation-for="@Model.Count" class="error"></span>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="@Model.Description" class="control-label">توضیحات</label>
                    <textarea class="form-control" asp-for="@Model.Description"></textarea>
                    <span asp-validation-for="@Model.Description" class="error"></span>
                </div>
            </div>
        </div>

        <input type="hidden" asp-for="@Model.Id" value="@Model.Id">
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">افزایش</button>
    </div>
</form>



