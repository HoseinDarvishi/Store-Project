@model AccountManagement.Application.Constracts.Account.ChangePassword
@{

}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">تغییر رمز</h4>
</div>

<form asp-page="./Index" asp-page-handler="ChangePassword"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Password" class="control-label">رمز جدید</label>
                    <input type="text" class="form-control" asp-for="@Model.Password">
                    <span asp-validation-for="@Model.Password" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.RePassword" class="control-label">تکرار رمز</label>
                    <input type="text" class="form-control" asp-for="@Model.RePassword">
                    <span asp-validation-for="@Model.RePassword" class="error"></span>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="@Model.Id" value="@Model.Id"/>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>


