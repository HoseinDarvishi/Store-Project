@model AccountManagement.Application.Constracts.Account.CreateAccount
@{

}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد کاربر جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Fullname" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="@Model.Fullname">
                    <span asp-validation-for="@Model.Fullname" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Username" class="control-label">نام کاربری</label>
                    <input type="text" class="form-control" asp-for="@Model.Username">
                    <span asp-validation-for="@Model.Username" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
           <div class="col-md-6">
              <div class="form-group">
                 <label asp-for="@Model.Mobile" class="control-label">موبایل</label>
                 <input type="text" class="form-control" asp-for="@Model.Mobile">
                 <span asp-validation-for="@Model.Mobile" class="error"></span>
              </div>
           </div>
           <div class="col-md-6">
              <div class="form-group">
                 <label asp-for="@Model.RoleId" class="control-label">نقش</label>
                 <select class="form-control" asp-for="@Model.RoleId" asp-items='new SelectList(Model.Roles , "Id" , "Name")'></select>
                 <span asp-validation-for="@Model.RoleId" class="error"></span>
              </div>
           </div>
        </div>
        <div class="row">
           <div class="col-md-12">
              <div class="form-group">
                 <label asp-for="@Model.Password" class="control-label">رمز عبور</label>
                 <input type="text" class="form-control" asp-for="@Model.Password">
                 <span asp-validation-for="@Model.Password" class="error"></span>
              </div>
           </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="@Model.Picture" class="control-label">عکس</label>
                    <input type="file" class="form-control" asp-for="@Model.Picture" accept="Image/*">
                    <span asp-validation-for="@Model.Picture" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>


