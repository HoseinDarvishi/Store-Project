@model AccountManagement.Application.Constracts.Role.EditRole

<div class="modal-header">
   <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
   <h4 class="modal-title">ویرایش نقش @Model.Name</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh">
   <div class="modal-body">

      <div class="row">
         <div class="col-md-12">
            <div class="form-group">
               <label asp-for="@Model.Name" class="control-label">نام</label>
               <input type="text" class="form-control" asp-for="@Model.Name">
               <span asp-validation-for="@Model.Name" class="error"></span>
            </div>
            <input type="hidden" asp-for="@Model.Id" value="@Model.Id"/>
         </div>
      </div>
   </div>
   <div class="modal-footer">
      <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
      <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
   </div>
</form>