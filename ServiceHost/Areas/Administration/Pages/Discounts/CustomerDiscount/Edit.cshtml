@model DiscountManagement.Application.Constracts.CustomerDiscount.EditCustomerDiscount
@{

}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش تخفیف مشتری </h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.DiscountPercent" class="control-label">درصد تخفیف</label>
                    <input type="text" class="form-control" asp-for="@Model.DiscountPercent">
                    <span asp-validation-for="@Model.DiscountPercent" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.ProductId" class="control-label">محصول</label>
                    <select asp-for="@Model.ProductId" class="form-control" asp-items='new SelectList(Model.Products , "Id" , "Name")'>
                        <option value="0">انتخاب محصول</option>
                    </select>
                    <span asp-validation-for="@Model.ProductId" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.StartDate" class="control-label">تاریخ شروع</label>
                    <input type="text" class="form-control persian-date-picker" asp-for="@Model.StartDate">
                    <span asp-validation-for="@Model.StartDate" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.EndDate" class="control-label">تاریخ پایان</label>
                    <input type="text" class="form-control persian-date-picker" asp-for="@Model.EndDate">
                    <span asp-validation-for="@Model.EndDate" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="@Model.Reason" class="control-label">علت تخفیف</label>
                    <input type="text" class="form-control" asp-for="@Model.Reason">
                    <span asp-validation-for="@Model.Reason" class="error"></span>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="@Model.Id" value="@Model.Id">
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>


