@model ShopManagement.Application.Constract.Product.CreateProduct
@{

}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد محصول جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Name" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="@Model.Name" onchange="makeSlug('Name', 'Slug')">
                    <span asp-validation-for="@Model.Name" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Code" class="control-label">کد</label>
                    <input type="text" class="form-control" asp-for="@Model.Code">
                    <span asp-validation-for="@Model.Code" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Price" class="control-label">قیمت</label>
                    <input type="text" class="form-control" asp-for="@Model.Price">
                    <span asp-validation-for="@Model.Price" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.CategoryId" class="control-label">گروه محصولی</label>
                    <select type="text" class="form-control" asp-items='new SelectList(Model.categories , "Id" , "Name")' asp-for="@Model.CategoryId">
                        <option value="0">گروه محصولی</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="@Model.Picture" class="control-label">عکس</label>
                    <input type="text" class="form-control" asp-for="@Model.Picture">
                    <span asp-validation-for="@Model.Picture" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.PictureAlt" class="control-label">Alt</label>
                    <input type="text" class="form-control" asp-for="@Model.PictureAlt">
                    <span asp-validation-for="@Model.PictureAlt" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.PictureTitle" class="control-label">عنوان</label>
                    <input type="text" class="form-control" asp-for="@Model.PictureTitle">
                    <span asp-validation-for="@Model.PictureTitle" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="@Model.ShortDescription" class="control-label">توضیحات کوتاه</label>
                    <textarea class="form-control autogrow" asp-for="@Model.ShortDescription" onchange="fillField('ShortDescription', 'MetaDescription')"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="@Model.ShortDescription" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="@Model.Description" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="@Model.Description"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="@Model.Description" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Keywords" class="control-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="@Model.Keywords">
                    <span asp-validation-for="@Model.Keywords" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Slug" class="control-label">اسلاگ</label>
                    <input type="text" class="form-control" asp-for="@Model.Slug">
                    <span asp-validation-for="@Model.Slug" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="@Model.MetaDescription" class="control-label">توضیحات متا</label>
                    <textarea class="form-control autogrow" asp-for="@Model.MetaDescription"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="@Model.MetaDescription" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>


