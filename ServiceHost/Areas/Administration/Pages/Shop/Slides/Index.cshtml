@page
@model Areas.Administration.Pages.Shop.Slides.IndexModel
@{
}

@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت اسلایدها";
}


<div class="row">
    <div class="col-sm-12">
        <h4 class=" page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index" , "Create")">ایجاد اسلاید جدید</a>
        </p>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title ">لیست اسلایدها</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>عکس</th>
                                    <th>سر تیتر</th>
                                    <th>عنوان</th>
                                    <th>وضعیت</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slide in Model.slides)
                                {
                                    <tr>
                                        <td>@slide.Id</td>
                                        <td>
                                            <img src="~/Sliders/@slide.Picture" style="width: 70px; height: 70px" />
                                        </td>
                                        <td>@slide.Heading</td>
                                        <td>@slide.Title</td>

                                        <td>
                                            @if (slide.IsRemoved)
                                            {
                                                <span>حذف شده</span>
                                            }
                                            else
                                            {
                                                <span>فعال</span>
                                            }
                                        </td>

                                        <td>@slide.CreationDate</td>
                                        <td>
                                            <a href="#showmodal=@Url.Page("./Index", "Edit" ,new {id = slide.Id})" class="btn btn-warning mx-2">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                            @if (slide.IsRemoved)
                                            {
                                                <a href="@Url.Page("./Index", "Restore" ,new {id = slide.Id})" class="btn btn-success mx-2">
                                                    <i class="fa fa-edit"></i> فعال سازی
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Page("./Index", "Remove" ,new {id = slide.Id})" class="btn btn-danger mx-2">
                                                    <i class="fa fa-edit"></i> غیر فعال سازی
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Admin/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Admin/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}

