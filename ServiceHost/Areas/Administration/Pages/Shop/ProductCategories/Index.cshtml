@page
@model ServiceHost.Areas.Administration.Pages.Shop.ProductCategories.IndexModel
@{
}

@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت گروه محصولات";
}

@section Styles{
    <link href="~/Admin/assets/css/UseVazir.css" rel="stylesheet" />
}

<div class="row usevazir">
    <div class="col-sm-12">
        <h4 class="usevazir page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn usevazir btn-success btn-lg">ایجاد گروه محصول جدید</a>
        </p>
    </div>
</div>

<div class="row usevazir">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading ">
                <h3 class="panel-title usevazir">جستجو در گروه محصولات</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline usevazir" role="form" method="get">
                    <div class="form-group usevazir">
                        <label class="sr-only"></label>
                        <input class="form-control" placeholder="نام گروه محصولی">
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10 usevazir">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10 usevazir" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv usevazir">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title usevazir">لیست گروه محصولات</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered usevazir">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>عکس</th>
                                    <th>نام</th>
                                    <th>تاریخ تولید</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @*@foreach (var category in Model.categories)
                                {
                                    <tr>
                                        <td>@category.Id</td>
                                        <td>
                                            <img src="@category.Picture" style="width: 70px; height: 70px" />
                                        </td>
                                        <td>@category.Name</td>
                                        <td>@category.CreationDate</td>
                                        <td>
                                            <a class="btn btn-warning pull-right m-rl-5">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                        </td>
                                    </tr>
                                }*@
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}
