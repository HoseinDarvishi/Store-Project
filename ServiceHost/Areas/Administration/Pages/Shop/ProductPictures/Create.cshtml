@model ShopManagement.Application.Constract.ProductPicture.CreateProductPicture
@{

}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد عکس محصول جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create" method="post">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="@Model.Picture" class="control-label">عکس</label>
                    <input type="text" class="form-control" asp-for="@Model.Picture">
                    <span asp-validation-for="@Model.Picture" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.PictureAlt" class="control-label">متن جایگزین</label>
                    <input type="text" class="form-control" asp-for="@Model.PictureAlt">
                    <span asp-validation-for="@Model.PictureAlt" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.ProductId" class="control-label">گروه محصولی</label>
                    <select type="text" class="form-control" asp-items='new SelectList(Model.Products , "Id" , "Name")' asp-for="@Model.ProductId">
                        <option value="0">محصول</option>
                    </select>
                    <span asp-validation-for="@Model.ProductId" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="@Model.PictureTitle" class="control-label">عنوان عکس</label>
                    <input type="text" class="form-control" asp-for="@Model.PictureTitle">
                    <span asp-validation-for="@Model.PictureTitle" class="error"></span>
                </div>
            </div>
        </div>
  
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>


